<Controls:MetroWindow
    x:Class="HouseMadera.Vues.VueChoixAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vuemod="clr-namespace:HouseMadera.VueModele"
    Title="Choixdumodule d'administration - Mader'House"
    Width="1536"
    Height="1024"
    MinWidth="1536"
    MinHeight="1024"
    FontFamily="Verdana"
    ForceCursor="True"
    ShowCloseButton="False"
    ShowIconOnTitleBar="False"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    ShowTitleBar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <vuemod:VueModeleChoixAdmin />
    </Window.DataContext>
    <Grid>
        <Grid Margin="0,0,0,928" Background="#FFA29A9A">
            <Button
                x:Name="btLogout"
                Width="65"
                Height="65"
                Margin="1453,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderThickness="0"
                Command="{Binding Logout}"
                Content="{iconPacks:PackIconFontAwesome signout,
                                                        Width=32,
                                                        Height=32}" />
        </Grid>
        <Grid Margin="0,53">
            <Image
                x:Name="image"
                Height="248"
                Margin="422,0,422,603"
                VerticalAlignment="Bottom"
                Source="pack://siteoforigin:,,,/Resources/logomaderacolor.png" />
            <Button
                Width="525"
                Height="185"
                Margin="502,372,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding AdminProjet}">
                <StackPanel>
                    <Image
                        Width="145"
                        Height="145"
                        Source="pack://application:,,,/Resources/adminprojet.png"
                        Stretch="Uniform" />
                    <TextBlock
                        Height="31"
                        HorizontalAlignment="Center"
                        FontFamily="Verdana"
                        FontSize="20">
                        Administration des projets
                    </TextBlock>
                </StackPanel>
            </Button>
            <Button
                Width="525"
                Height="185"
                Margin="502,625,0,100"
                HorizontalAlignment="Left"
                Command="{Binding AdminClient}">
                <StackPanel>
                    <Image
                        Width="145"
                        Height="145"
                        Source="pack://application:,,,/Resources/adminclient.png"
                        Stretch="Uniform" />
                    <TextBlock
                        Height="31"
                        HorizontalAlignment="Center"
                        FontFamily="Verdana"
                        FontSize="20">
                        Administration des clients
                    </TextBlock>
                </StackPanel>
            </Button>
        </Grid>
        <Grid Margin="0,940,0,0" Background="#FFA29A9A" />
    </Grid>
</Controls:MetroWindow>
